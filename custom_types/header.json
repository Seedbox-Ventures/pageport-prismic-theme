{
  "General": {
    "background_color": {
      "type": "Select",
      "config": {
        "options": [
          "Primary",
          "Accent",
          "Info",
          "Warn",
          "Danger",
          "Success",
          "Light Text",
          "Dark Text",
          "Background Default",
          "Background Alternative",
          "Background Emphasize"
        ],
        "default_value": "Primary",
        "label": "Background Color"
      }
    },
    "is_sticky": {
      "type": "Boolean",
      "config": {
        "default_value": false,
        "label": "Is Sticky"
      }
    },
    "padding_top": {
      "type": "Text",
      "config": {
        "label": "Padding Top",
        "placeholder": "1rem"
      }
    },
    "padding_bottom": {
      "type": "Text",
      "config": {
        "label": "Padding Bottom",
        "placeholder": "1rem"
      }
    }
  },
  "Logo": {
    "logo": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": null,
          "height": null
        },
        "thumbnails": [],
        "label": "Logo"
      }
    },
    "logo_position": {
      "type": "Boolean",
      "config": {
        "placeholder_false": "Left",
        "placeholder_true": "Right",
        "default_value": false,
        "label": "Logo Position"
      }
    },
    "logo_width": {
      "type": "Text",
      "config": {
        "label": "Logo Width",
        "placeholder": "120px"
      }
    },
    "logo_link": {
      "type": "Link",
      "config": {
        "allowTargetBlank": true,
        "label": "Header Logo Link",
        "placeholder": "/",
        "select": null
      }
    }
  },
  "Menu": {
    "burger_menu_breakpoint": {
      "type": "Select",
      "config": {
        "options": [
          "Never",
          "Smartphone",
          "Tablet",
          "Laptop",
          "Desktop"
        ],
        "default_value": "Never",
        "label": "Burger Menu"
      }
    },
    "links": {
      "type": "Group",
      "config": {
        "fields": {
          "link": {
            "type": "Link",
            "config": {
              "allowTargetBlank": true,
              "label": "Link",
              "placeholder": "https://pageport.io",
              "select": null
            }
          },
          "text": {
            "type": "Text",
            "config": {
              "label": "Text",
              "placeholder": "Link Text"
            }
          },
          "style": {
            "type": "Select",
            "config": {
              "options": [
                "Link",
                "Button - Default",
                "Button - Primary",
                "Button - Secondary",
                "Button - Submit",
                "Button - Success",
                "Button - Danger",
                "Button - Cancel"
              ],
              "default_value": "Link",
              "label": "Style"
            }
          }
        },
        "label": "Header Menu"
      }
    }
  }
}
