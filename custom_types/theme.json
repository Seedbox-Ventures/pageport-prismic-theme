          "letter_spacing": {
            "type": "Text",
            "config": {
              "label": "Letter Spacing",
              "placeholder": "normal"
            }
          },
          "link_color": {
            "type": "Select",
            "config": {
              "options": [
                "Primary",
                "Accent",
                "Info",
                "Warn",
                "Danger",
                "Success",
                "Light Text",
                "Dark Text",
                "Background Default",
                "Background Alternative",
                "Background Emphasize"
