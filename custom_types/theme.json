    "button_border_radius": {
      "type": "Number",
      "config": {
        "label": "Button Border Radius",
        "placeholder": "10px"
      }
    },
    "button_border_width": {
      "type": "Text",
      "config": {
        "label": "Button Border Width",
        "placeholder": ".125em"
      }
    },
    "button_box_shadow": {
      "type": "Text",
      "config": {
        "label": "Button Box Shadow",
        "placeholder": "none"
      }
    },
    "buttons": {
      "type": "Group",
      "config": {
        "fields": {
          "button_type": {
            "type": "Select",
            "config": {
              "options": [
                "Default",
                "Primary",
                "Secondary",
                "Submit",
                "Success",
                "Danger",
                "Cancel"
              ],
              "default_value": "Default",
              "label": "Button Type"
            }
          },
          "color": {
            "type": "Select",
            "config": {
              "options": [
                "Primary",
                "Accent",
                "Info",
                "Warn",
                "Danger",
                "Success",
                "Light Text",
                "Dark Text",
                "Background Default",
                "Background Alternative",
                "Background Emphasize"
              ],
              "default_value": "Primary",
              "label": "Color"
            }
          },
          "fill_background": {
            "type": "Boolean",
            "config": {
              "placeholder_false": "outline",
              "placeholder_true": "fill",
              "default_value": true,
              "label": "Fill Background"
            }
          },
          "hover_effect": {
            "type": "Select",
            "config": {
              "options": [
                "None",
                "Change Background",
                "Change Box Shadow",
                "Darken / Lighten"
              ],
              "label": "Hover Effect",
              "placeholder": "none"
            }
          }
        },
        "label": "Color Mapping"
      }
    }
