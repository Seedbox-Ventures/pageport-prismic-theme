{
  "General": {
    "icon": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 512,
          "height": 512
        },
        "thumbnails": [],
        "label": "Icon"
      }
    },
    "icon_inverted": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 512,
          "height": 512
        },
        "thumbnails": [],
