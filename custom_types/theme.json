  "Colors": {
    "colors": {
      "type": "Group",
      "config": {
        "fields": {
          "color_type": {
            "type": "Select",
            "config": {
              "options": [
                "Primary",
                "Accent",
                "Info",
                "Warn",
                "Danger",
                "Success",
                "Light Text",
                "Dark Text",
                "Background Default",
                "Background Alternative",
                "Background Emphasize"
              ],
              "default_value": "Primary",
              "label": "Color Type"
            }
          },
          "value": {
            "type": "Color",
            "config": {
              "label": "value"
            }
          }
        },
        "label": "Colors"
      }
    }
  },
  "Type": {
    "primary_font_family": {
      "type": "Text",
      "config": {
        "label": "Primary Font Family",
        "placeholder": "'Roboto', sans-serif"
      }
    },
    "font_import_link": {
      "type": "Link",
      "config": {
        "label": "Primary Font Import Link",
        "placeholder": "https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;1,400;1,700&display=swap",
        "select": null
      }
    },
    "secondary_font_family": {
      "type": "Text",
      "config": {
        "label": "Secondary Font Family",
        "placeholder": "'Source Sans Pro', sans-serif"
      }
    },
    "secondary_font_import_link": {
      "type": "Link",
      "config": {
        "label": "Secondary Font Import Link",
        "placeholder": "'https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital,wght@0,400;0,700;1,400;1,700&display=swap'",
        "select": null
      }
    },
    "type_definitions": {
      "type": "Group",
      "config": {
        "fields": {
          "text_type": {
            "type": "Select",
            "config": {
              "options": [
                "Standard Text",
                "Page Title",
                "Section Title",
                "Sub Title",
                "Small Title",
                "Small Text",
                "Big Text",
                "Header",
                "Footer",
                "Footnote",
                "Button"
              ],
              "default_value": "Standard Text",
              "label": "Text Type"
            }
          },
          "font_family": {
            "type": "Select",
            "config": {
              "options": [
                "Primary",
                "Secondary"
              ],
              "default_value": "Primary",
              "label": "Font Family"
            }
          },
          "font_size": {
            "type": "Text",
            "config": {
              "label": "Font Size",
              "placeholder": "16px"
            }
          },
          "font_weight": {
            "type": "Select",
            "config": {
              "options": [
                "400",
                "100",
                "200",
                "300",
                "500",
                "600",
                "700",
                "800",
                "900"
              ],
              "default_value": "400",
              "label": "Font Weight"
            }
          },
          "font_style": {
            "type": "Select",
            "config": {
              "options": [
                "normal",
                "italic"
              ],
              "default_value": "normal",
              "label": "Font Style"
            }
          },
          "line_height": {
            "type": "Text",
            "config": {
              "label": "Line Height",
              "placeholder": "1.2em"
            }
