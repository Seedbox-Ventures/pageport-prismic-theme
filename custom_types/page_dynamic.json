            "type": "Slice",
            "fieldset": "Hero 1",
            "description": "Hero Section",
            "icon": "aspect_ratio",
            "display": "grid",
            "non-repeat": {
              "title": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1",
                  "label": "Title",
                  "placeholder": "Title"
                }
              },
              "subtitle": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1,heading2,heading3,heading4,heading5,heading6",
                  "label": "Subtitle",
                  "placeholder": "Sub Title"
                }
              },
              "hero_background_image": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": 1920,
                    "height": 1080
