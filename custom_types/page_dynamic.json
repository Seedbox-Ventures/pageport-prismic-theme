                }
              },
              "title": {
                "type": "StructuredText",
                "config": {
                  "single": "heading2",
                  "label": "title"
                }
              },
              "description": {
                "type": "StructuredText",
                "config": {
                  "single": "heading3,strong,em",
                  "label": "description"
                }
              },
              "link": {
                "type": "Link",
                "config": {
                  "select": "document",
                  "label": "link"
                }
              },
              "link_label": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "link_label",
                  "placeholder": "Optional link label"
                }
              }
            },
            "repeat": {}
          }
        }
