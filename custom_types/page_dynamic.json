      "config": {
        "label": "Page Title",
        "placeholder": "Page Title"
      }
    },
    "meta_tags": {
      "type": "Group",
      "config": {
        "fields": {
          "name": {
            "type": "Text",
            "config": {
              "label": "name",
              "placeholder": "Name of the meta tag"
            }
          },
          "value": {
            "type": "Text",
            "config": {
              "label": "value",
              "placeholder": "Value of the meta tag"
