              "full_width_image": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": 980,
                    "height": 300
                  },
                  "thumbnails": [],
                  "label": "full_width_image"
                }
              }
            },
            "repeat": {}
          },
          "image_gallery": {
            "type": "Slice",
            "fieldset": "Image Gallery",
            "description": "A collection of images with descriptions & links",
            "icon": "image",
            "display": "list",
            "non-repeat": {
              "gallery_title": {
                "type": "StructuredText",
                "config": {
                  "single": "heading2,heading3",
                  "label": "gallery_title"
                }
              }
            },
            "repeat": {
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": 727,
                    "height": 402
                  },
                  "thumbnails": [],
                  "label": "image"
                }
              },
              "image_description": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "image_description"
                }
              },
              "link": {
                "type": "Link",
                "config": {
                  "select": "document",
                  "label": "link"
                }
              },
              "link_label": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "link_label",
                  "placeholder": "Optional link label"
                }
              }
            }
          },
          "image_highlight": {
            "type": "Slice",
            "fieldset": "Image Highlight",
