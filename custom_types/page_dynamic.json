          "testimonials": {
            "type": "Slice",
            "fieldset": "Testimonials",
            "description": "Testimonial Section",
            "icon": "person_pin",
            "display": "grid",
            "non-repeat": {},
            "repeat": {}
          },
          "text": {
            "type": "Slice",
            "fieldset": "Text",
            "description": "Rich Text section with option for 1 or 2 columns",
            "icon": "text_fields",
            "display": "list",
            "non-repeat": {
              "content": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,heading1,heading2,heading3,strong,em,hyperlink",
                  "allowTargetBlank": true,
                  "label": "content"
                }
              },
              "columns": {
                "type": "Select",
                "config": {
                  "options": [
                    "1 Column",
                    "2 Columns"
                  ],
                  "default_value": "1 Column",
                  "label": "columns"
                }
              },
              "background_color": {
                "type": "Select",
                "config": {
                  "options": [
                    "Background Default",
                    "Background Alternative",
                    "Background Emphasize"
                  ],
                  "default_value": "Background Default",
                  "label": "Background Color"
                }
              },
              "padding_top": {
                "type": "Text",
                "config": {
                  "label": "Padding Top",
                  "placeholder": "2rem|3rem"
                }
              },
              "padding_bottom": {
                "type": "Text",
                "config": {
                  "label": "Padding Bottom",
                  "placeholder": "2rem|3rem"
                }
              }
            },
            "repeat": {}
          },
          "quote": {
            "type": "Slice",
            "fieldset": "Quote",
            "description": "A stylized quote",
            "icon": "format_quote",
            "display": "list",
            "non-repeat": {
              "quote": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "allowTargetBlank": true,
                  "label": "quote"
                }
              }
