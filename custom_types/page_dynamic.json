            "non-repeat": {},
            "repeat": {}
          },
          "pricing": {
            "type": "Slice",
            "fieldset": "Pricing",
            "description": "Pricing Section",
            "icon": "attach_money",
            "display": "grid",
            "non-repeat": {},
            "repeat": {}
          },
          "contact_1": {
            "type": "Slice",
            "fieldset": "Contact 1",
            "description": "Contact Section",
            "icon": "contact_mail",
            "display": "grid",
