{
  "Main": {
    "site_name": {
      "type": "Text",
      "config": {
        "label": "Site Name"
      }
    }
  },
  "Consent Banner & Data Protection": {
    "banner_explanation_text": {
      "type": "Text",
      "config": {
        "label": "Explanation Text"
      }
    },
    "banner_text_type": {
      "type": "Select",
      "config": {
        "options": [
          "Standard Text",
          "Page Title",
          "Section Title",
          "Sub Title",
          "Small Title",
          "Small Text",
          "Big Text",
          "Footnote",
          "Header",
          "Footer",
          "Button"
        ],
        "default_value": "Standard Text",
        "label": "Text Type"
      }
    },
    "banner_button_type": {
      "type": "Select",
      "config": {
        "options": [
          "Default",
          "Primary",
          "Secondary",
          "Submit",
          "Cancel",
          "Info",
          "Success",
          "Warn",
          "Danger"
        ],
        "default_value": "Default",
        "label": "Button Type"
      }
    },
    "banner_background_color": {
      "type": "Select",
      "config": {
        "options": [
          "Primary",
          "Accent",
          "Info",
          "Warn",
          "Danger",
          "Success",
          "Light Text",
          "Dark Text",
          "Background Default",
          "Background Alternative",
          "Background Emphasize"
        ],
        "default_value": "Primary",
        "label": "Background Color"
      }
    },
    "trackers": {
      "type": "Group",
      "config": {
        "fields": {
          "tracking_category": {
            "type": "Select",
            "config": {
              "options": [
                "Essential",
                "Marketing",
                "Statistics"
              ],
              "label": "Tracking Category"
            }
          },
          "tracking_tag_id": {
            "type": "Text",
            "config": {
              "label": "Tracking Tag Id",
              "placeholder": "Google Mess ID, Facebook Pixel . . ."
            }
          },
          "tracking_provider": {
            "type": "Text",
            "config": {
              "label": "Tracking Provider"
            }
          },
          "tracking_gdpr_link": {
            "type": "Link",
            "config": {
              "label": "Tracking GDPR Link",
              "select": null
            }
          },
          "tracker_purpose": {
            "type": "Text",
            "config": {
              "label": "Tracking Purpose"
            }
          },
          "tracking_code": {
            "type": "StructuredText",
            "config": {
              "multi": "embed,rtl",
              "label": "Tracking Code"
            }
          }
        },
        "label": "Trackers"
      }
    }
  }
}
