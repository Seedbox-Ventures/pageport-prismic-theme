{
  "Main": {
    "site_name": {
      "type": "Text",
      "config": {
        "label": "Site Name"
      }
    }
  },
  "Consent Banner & Data Protection": {
    "banner_explanation_text": {
      "type": "Text",
      "config": {
        "label": "Explanation Text"
      }
    },
    "banner_text_type": {
      "type": "Select",
      "config": {
        "options": [
          "Standard Text",
          "Page Title",
          "Section Title",
          "Sub Title",
          "Small Title",
          "Small Text",
          "Big Text",
          "Footnote",
          "Header",
          "Footer",
          "Button"
        ],
        "default_value": "Standard Text",
        "label": "Text Type"
      }
    },
    "banner_button_type": {
      "type": "Select",
      "config": {
        "options": [
          "Default",
          "Primary",
          "Secondary",
          "Submit",
          "Cancel",
          "Info",
          "Success",
          "Warn",
          "Danger"
        ],
        "default_value": "Default",
        "label": "Button Type"
      }
    },
    "banner_background_color": {
      "type": "Select",
      "config": {
        "options": [
          "Primary",
          "Accent",
          "Info",
          "Warn",
          "Danger",
          "Success",
          "Light Text",
          "Dark Text",
          "Background Default",
          "Background Alternative",
          "Background Emphasize"
        ],
        "default_value": "Primary",
        "label": "Background Color"
      }
    },
    "trackers": {
      "type": "Group",
      "config": {
        "fields": {
          "type": {
            "type": "Select",
            "config": {
              "options": [
                "Facebook Pixel",
                "Google Tag Manager",
                "Google Analytics",
                "Hotjar",
                "LinkedIn Insight Tag",
                "VWO"
              ],
              "label": "Tracking Type"
            }
          },
          "category": {
            "type": "Select",
            "config": {
              "options": [
                "Essential",
                "Marketing",
                "Statistics"
              ],
              "label": "Tracking Category"
            }
          },
          "tag_id": {
            "type": "Text",
            "config": {
              "label": "Tracking Tag Id",
              "placeholder": "Google Mess ID, Facebook Pixel . . ."
            }
          },
          "provider": {
            "type": "Text",
            "config": {
              "label": "Tracking Provider"
            }
          },
          "gdpr_link": {
            "type": "Link",
            "config": {
              "label": "Tracking GDPR Link",
              "select": null
            }
          },
          "purpose": {
            "type": "Text",
            "config": {
              "label": "Tracking Purpose"
            }
          }
        },
        "label": "Trackers"
      }
    }
  },
  "Email Sending": {
    "email_sender_name": {
      "type": "Text",
      "config": {
        "label": "Sender name",
        "placeholder": "pageport"
      }
    },
    "email_sender_address": {
      "type": "Text",
      "config": {
        "label": "Sender Email Address"
      }
    },
    "email_api": {
      "type": "Select",
      "config": {
        "options": [
          "Sendinblue"
        ],
        "label": "Email API"
      }
    },
    "email_api_key": {
      "type": "Text",
      "config": {
        "label": "Email API Key"
      }
    }
  }
}
